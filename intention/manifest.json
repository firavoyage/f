{
  "manifest_version": 3,
  "name": "Intention",
  "version": "1.0",
  "description": "A focused, full-screen workflow with minimal distractions.",
  "permissions": [
    "tabs",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "action": {
    "default_popup": "settings.html",
    "default_title": "Intention Settings"
  },
  "incognito": "split"
}