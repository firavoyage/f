{
  "stylesheet": {
    ".pre": {
      "": "pos-fixed inset-0 max-w-full box-border m-0 px-[15%] md:px-[10%] sm:px-[5%] pt-12 bg-blue-9 text-white text-xl font-sans leading-relaxed overflow-x-hidden overflow-y-auto",
      "h1,h2,h3,h4,h5,h6": "mt-6 mb-3 leading-tight text-white text-bold font-serif italic",
      "h1": "text-4xl",
      "h2": "text-3xl",
      "h3": "text-2xl",
      "p": "my-4",
      "strong": "weight-bold",
      "em": "style-italic",
      "a": "text-lime-4 decoration-none hover:underline",
      "ul,ol": "my-4 pl-8",
      "ul": "list-disc",
      "ul.contains-task-list": "list-none",
      "ol": "list-decimal",
      "li": "my-2",
      "pre code": "block mx-0 my-6 p-4 max-w-full bg-gray rounded overflow-auto",
      "code": "mx-1 p-1 rounded text-base font-code bg-gray-1",
      "img": "block my-6 max-w-full h-auto",
      "blockquote": "my-8 px-10 py-4 bg-card rounded-2xl",
      "table": "my-6 w-full border-collapse",
      "th,td": "px-1 py-2",
      "details": "my-6 px-0 py-2 rounded-2xl",
      "summary": "inline px-4 py-2 text-base text-bold list-none rounded-full bg-card",
      ".katex *": "font-math"
    },
    ".pre::-webkit-scrollbar": "w-2",
    ".pre::-webkit-scrollbar-thumb": "bg-gray-1 rounded-full",
    ".pre::-webkit-scrollbar-thumb:hover": "bg-#99a1b330",
    ".pre::-webkit-scrollbar-thumb:active": "bg-#99a1b350"
  },
  "theme": {
    "color": {
      "white": "#F6F7F9",
      "blue": { "9": "#23272F" },
      "gray": { "1": "#99a1b31a", "9": "#16181D", "": "#16181D" },
      "lime": { "4": "#58c4dc" },
      "purple": {
        "40": "rgb(107 117 219)",
        "50": "rgb(87 95 183)",
        "60": "rgb(43 52 145 / 20%)"
      },
      "card": "#343a46"
    },
    "font": {
      "serif": "Cormorant, Noto Serif CJK SC, serif",
      "sans": "Ubuntu, sans-serif",
      "code": "Fira Code, monospace",
      "math": "XITS Math, math"
    }
  }
}
